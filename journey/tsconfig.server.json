{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "target": "es6",
    "isolatedModules": true,
    "removeComments": true,
    "noEmit": false,
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@src/*": ["./src/*"],
      "@screens/*": ["./src/screens/*"],
      "@journey/*": ["./src/screens/Journeys/*"],
      "@setup/*": ["./src/screens/Setup/*"],
      "@workflow/*": ["./src/screens/Workflow/*"],
      "@components/*": ["./src/components/*"],
      "@utils/*": ["./src/utils/*"],
      "@configuration/*": ["./src/configuration/*"],
      "@services/*": ["./src/services/*"],
      "@performance/*": [
        "./src/screens/Performance/*"
      ]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx",  "**/*.json"]
}
